{% extends 'base.html.twig' %}

{% block body %}

	{# test div 0->  id="login" /  form -> id="login-form"#}
	<div id="login">
		<div class="container">
			<div class="row">
				<div class="col-12">
					{% if error %}
						<div class="alert alert-danger">{{error.message}}</div>
					{% endif %}
				</div>
			</div>
			<h1 class="h3 mb-3 font-weight-normal text-center">Connexion</h1>
			<div class="row">
				<form method="post" class="col-6 mx-auto">
					<div class="col-12">
						<label for="inputEmail" class="col-form-label">Identifiant*:</label>
						<input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3" autocomplete="email" required autofocus>
					</div>
					<div class="col-12">
						<label for="inputPassword" class="col-form-label">Mot de passe*:</label>
						<input type="password" name="password" id="inputPassword" class="form-control mb-3" autocomplete="current-password" required>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					</div>

					<div class="col-12">

						<div class="col-auto">
							<button class="btn btn-lg btn-primary p-4 mt-4" type="submit">Se connecter</button>
						</div>

						<div class="col-auto">
							<div class="switch-remember form-check form-switch m-3">
								<input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="_remember_me">
								<label class="form-check-label ms-2" for="flexSwitchCheckDefault">Se souvenir de moi</label>
							</div>

							<a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√©</a>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
